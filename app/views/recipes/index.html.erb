<h1>Listing recipes</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Email</th>
      <th>Ingredients</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= image_tag recipe.image.url(:medium) %></td>
        <td><%= recipe.title %></td>
        <td><%= recipe.user.email if recipe.user %></td>
        <td><%= recipe.ingredients %></td>
        <td><%= link_to 'Show', recipe %></td>
        <% if recipe.user == current_user %>
          <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
          <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure you want to delete this recipe?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
<%= link_to 'New Recipe', new_recipe_path %>
<% end %>
