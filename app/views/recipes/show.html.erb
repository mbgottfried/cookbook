<p id="notice"><%= notice %></p>

<%= image_tag @recipe.image.url(:medium) %>

<p>
  <strong>Title:</strong>
  <%= @recipe.title %>
</p>
<p>
	<strong>Ingredients:</strong>
	<%= @recipe.ingredients %>
</p>
<% if @recipe.user == current_user %>
	<%= link_to 'Edit', edit_recipe_path(@recipe) %> |
	<%= link_to 'Back', recipes_path %>
<% end %>
